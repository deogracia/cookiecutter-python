root = true

[*]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
indent_size              = 2
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true

[*.py]
end_of_line              = unset
insert_final_newline     = unset
indent_style             = space
indent_size              = 4
trim_trailing_whitespace = unset
insert_final_newline     = unset

[{Makefile,**.mk}]
indent_style             = tab
